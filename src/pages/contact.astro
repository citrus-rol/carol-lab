---
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import BaseLayout from '../layouts/BaseLayout.astro';
import BackToTop from '../components/BackToTop.astro';
---

<BaseLayout title="歡迎合作洽談" padded={false}>
  <Navbar slot="navbar" />

  <main class="contact-main">

    <!-- Tally 表單 -->
    <iframe
      src="https://tally.so/embed/wbJ2vo?dynamicHeight=1"
      width="100%"
      height="100%"
      frameborder="0"
      marginheight="0"
      marginwidth="0"
      title="歡迎合作洽談"
      class="tally-iframe"
    ></iframe>

  </main>

  <BackToTop />
  <Footer slot="footer" />

  <style>
    main.contact-main {
      display: flex;
      flex-direction: column;
      align-items: center;          /* 水平置中 */
      justify-content: center;      /* 垂直置中 */
      min-height: 100vh;            /* 滿整個視窗高度 */
      margin: 0;
      padding: 0;
      width: 100%;
      box-sizing: border-box;
      background-color: #d3d7d9;             
    }

    
    .tally-iframe {
      width: 100%;
      max-width: 1200px;
      min-height: 1000px;
      border: none;
      box-sizing: border-box;
      display: block;
      margin: 64px auto;               /* 水平置中 */
    }

    /* 平板響應式 */
    @media (max-width: 1024px) {
      .tally-iframe {
        width: 95%;
        min-height: 550px;
      }
    }

    /* 手機響應式 */
    @media (max-width: 480px) {
      .tally-iframe {
        width: 100%;
      }
    }

  </style>
</BaseLayout>
