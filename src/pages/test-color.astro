---
const colors = {
  "橘暖自然系": [
    { hex: "#E9A178", name: "柔和橘" },
    { hex: "#F6BA6F", name: "暖黃橘" },
    { hex: "#B67352", name: "棕橘" },
  ],
  "藍綠清新系": [
    { hex: "#7FC8A9", name: "薄荷綠" },
    { hex: "#A1CCD1", name: "淡藍灰" },
    { hex: "#4A919E", name: "深藍綠" },
  ]
};
---

<html lang="zh-Hant">
  <head>
    <meta charset="UTF-8" />
    <title>色彩展示</title>
    <style>
      body {
        font-family: sans-serif;
        background-color: #505e66;
        color: #fff;
        padding: 2rem;
      }
      h2 {
        margin-top: 2rem;
      }
      .color-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 1rem;
        margin-top: 1rem;
      }
      .color-box {
        border-radius: 12px;
        padding: 1rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 120px;
        color: #fff;
        font-weight: bold;
        box-shadow: 0 4px 10px rgba(0,0,0,0.3);
      }
    </style>
  </head>
  <body>
    <h1>色彩展示</h1>
    {Object.entries(colors).map(([group, list]) => (
      <section>
        <h2>{group}</h2>
        <div class="color-grid">
          {list.map(color => (
            <div class="color-box" style={`background-color: ${color.hex}`}>
              <div>{color.name}</div>
              <div>{color.hex}</div>
            </div>
          ))}
        </div>
      </section>
    ))}
  </body>
</html>
