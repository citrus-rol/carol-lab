---
// BackToTop.astro
---
<button id="back-to-top" aria-label="回到頂部">↑</button>

<style>
#back-to-top {
  position: fixed;
  bottom: 72px;
  right: 28px;
  width: 48px;
  height: 48px;
  padding-bottom: 4px;
  border-radius: 50%;
  background-color: #505e6633;
  box-shadow: 0 0 12px #505e6633;
  border: none;
  font-size: 32px;
  color: #d3d7d9;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.4s ease, transform 0.3s ease, box-shadow 0.3s ease, color 0.3s ease;;
  z-index: 1000;
}

@media (max-width: 768px) {
  #back-to-top {
    width: 36px;
    height: 36px;
    font-size: 24px;
    bottom: 48px;
    right: 16px;
  }
}

#back-to-top.show {
  opacity: 1;
  pointer-events: auto;
  animation: fadeInBounce 0.6s forwards;
}

#back-to-top:hover {
  box-shadow: 0 0 16px #243640;
  color: #e5af3a;
  background-color: #505e6680;
}

@keyframes fadeInBounce {
  0% { opacity: 0; transform: translateY(10px); }
  50% { transform: translateY(-6px); }
  100% { opacity: 1; transform: translateY(0); }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', () => {
  const btn = document.getElementById('back-to-top');
  if (!btn) return;

  let ticking = false;
  window.addEventListener('scroll', () => {
    if (!ticking) {
      window.requestAnimationFrame(() => {
        btn.classList.toggle('show', window.scrollY > 400);
        ticking = false;
      });
      ticking = true;
    }
  });

  btn.addEventListener('click', () => {
    window.scrollTo({ top: 0, behavior: 'smooth' });
  });
});
</script>