---
/** Footer 組件 */
const base = import.meta.env.BASE_URL;
---

<footer>
  <div class="footer-line">
    <div class="footer-text">
      <span class="footer-copy">
        © 2025 Carol Lab。版權所有。
      </span>
      <span class="divider">｜</span>
      <a class="footer-email" href="mailto:c.citrus.rol@gmail.com">
        c.citrus.rol@gmail.com
      </a>
    </div>
  </div>
</footer>

<style>
footer {
  background-color: #505e66;
  color: #d3d7d9;
  padding: 16px 24px;
  font-size: var(--font-sm); /* ✅ 改成 tokens.css 變數 */
  letter-spacing: 0.05rem;
  font-family: "Noto Sans TC","Noto Sans","Microsoft JhengHei","PingFang TC","Heiti TC",Arial,sans-serif;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  margin-top: auto; /* ✅ 推到底 */
}

.footer-line {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8px;
  width: 100%;
}

.footer-text {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  gap: 8px;
}

.footer-copy {
  display: flex;
  align-items: center;
  gap: 4px;
  font-size: var(--font-sm); /* ✅ 保持一致 */
}

.divider {
  display: none; /* 手機隱藏 */
  font-size: var(--font-sm); /* ✅ Divider 也跟隨 */
}

.footer-email {
  display: flex;
  align-items: center;
  gap: 6px;
  color: #d3d7d9;
  text-decoration: none;
  transition: color 0.3s;
  user-select: text !important;
  font-size: var(--font-sm); /* ✅ 明確指定 */
}

.footer-email:hover {
  color: #E5AF3A;
  text-decoration: underline;
}

/* 平板以上響應式 */
@media (min-width: 480px) {
  .footer-text {
    gap: 12px;
  }
}

@media (min-width: 768px) {
  .footer-line {
    flex-direction: row;
    justify-content: center;
    gap: 24px;
  }
  .footer-text {
    flex-direction: row;
    gap: 24px;
    align-items: center;
  }
  .divider {
    display: inline;
  }
}
</style>
