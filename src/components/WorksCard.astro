---
const { title, date, image, isAboveFold = false } = Astro.props;
const base = import.meta.env.BASE_URL || '/';

// 如果 image 是 "placeholder"，不用處理，直接用 data URI 傳進來
const imgSrc =
  image && image.startsWith('data:image/svg') // 直接是 data URI
    ? image
    : !image || image === 'placeholder'
      ? '' // 可以選擇給一個 fallback
      : image.startsWith(base)
        ? image
        : `${base}${image.replace(/^\//, '')}`;
---

<div class="card" role="article" aria-label={title}>
  <div class="img-wrapper">
    <img
      class="inner-img"
      src={imgSrc}
      alt={title}
      loading={isAboveFold ? "eager" : "lazy"}
      oncontextmenu="return false;"
      draggable="false"
    />
  </div>
  <div class="text-container">
    <div class="title">{title}</div>
    <div class="date">{date}</div>
  </div>
</div>

<style>
.card {
  position: relative;
  border-radius: 12px;
  padding: 24px;
  box-sizing: border-box;
  cursor: pointer;
  width: 100%;
  background-color: #d3d7d933;
  box-shadow: 0 0 16px 4px #24364080;
  transition: background-color 0.3s ease, box-shadow 0.3s ease, transform 0.3s ease;
  z-index: 1;
}

/* hover only for桌機 */
.card:hover {
  transform: scale(1.05);
  background-color: #d3d7d980;
  box-shadow: inset 0 0 24px 12px #24364080;
}

.img-wrapper {
  aspect-ratio: 1/1;
  width: 100%;
  border-radius: 12px;
  overflow: hidden;
  margin-bottom: 12px;
  position: relative;
}

.inner-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
  opacity: 0.8; /* 預設透明度 */
  border-radius: inherit;
}

/* 遮罩用 wrapper::after */
.img-wrapper::after {
  content: "";
  position: absolute;
  inset: 0;
  border-radius: 12px;
  background-color: #505e6680; /* 遮罩顏色 */
  opacity: 0.4;              /* 遮罩強度 */
  pointer-events: none;
  transition: opacity 0.3s ease;
}

/* hover 時讓遮罩變透明 */
.card:hover .img-wrapper::after {
  opacity: 0;
}

.text-container {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  padding: 12px;
  text-align: right;
  border-radius: 12px 2px 2px 12px;
}

.text-container::after {
  content: "";
  position: absolute;
  top: 0;
  bottom: 0;
  right: 0px;
  width: 2px;
  background-color: #E5AF3A33;
  border-radius: 2px;
}
.card:hover .text-container::after {
  background-color: #E5AF3A80;
}

.title {
  font-size: var(--font-md);
  letter-spacing: 0.05rem; 
  font-weight: bold;
  color: #505e66;
  margin-bottom: 4px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  transition: color 0.3s ease;
}

.date {
  font-size: var(--font-sm);
  letter-spacing: 0.05rem;
  color: #24364080;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 手機版: 拔掉 hover 效果，但保留樣式 */
@media (max-width: 480px) {

  .card {
    background-color: #d3d7d980;   /* 固定底色 */
    box-shadow: inset 0 0 24px 12px #24364080; /* 固定陰影 */
    transform: none; /* 不放大 */
  }

  /* 🚫 覆寫 hover，保持和預設一致 */
  .card:hover {
    background-color: #d3d7d980;
    box-shadow: inset 0 0 24px 12px #24364080;
    transform: none;
  }

  .img-wrapper::after {
    opacity: 0;  /* 固定遮罩，不要變透明 */
  }
  .card:hover .img-wrapper::after {
    opacity: 0;  /* 固定遮罩，不要變透明 */
  }

  .text-container::after {
    background-color: #E5AF3A80; /* 固定原本的顏色 */
  }
  .card:hover .text-container::after {
    background-color: #E5AF3A80; /* 固定原本的顏色 */
  }

  .card:hover .title {
    color: #505e66; /* 固定文字顏色 */
  }

  .inner-img {
    opacity: 0.8; /* 預設透明度 */
  }
}
</style>
