---
const { title, date, image, isAboveFold = false } = Astro.props;
const base = import.meta.env.BASE_URL || '/';

// å¦‚æœ image æ˜¯ "placeholder"ï¼Œä¸ç”¨è™•ç†ï¼Œç›´æ¥ç”¨ data URI å‚³é€²ä¾†
const imgSrc =
  image && image.startsWith('data:image/svg') // ç›´æ¥æ˜¯ data URI
    ? image
    : !image || image === 'placeholder'
      ? '' // å¯ä»¥é¸æ“‡çµ¦ä¸€å€‹ fallback
      : image.startsWith(base)
        ? image
        : `${base}${image.replace(/^\//, '')}`;
---

<div class="card" role="article" aria-label={title}>
  <div class="img-wrapper">
    <img
      class="inner-img"
      src={imgSrc}
      alt={title}
      loading={isAboveFold ? "eager" : "lazy"}
      oncontextmenu="return false;"
      draggable="false"
    />
  </div>
  <div class="text-container">
    <div class="title">{title}</div>
    <div class="date">{date}</div>
  </div>
</div>

<style>
.card {
  position: relative;
  border-radius: 12px;
  padding: 24px;
  box-sizing: border-box;
  cursor: pointer;
  width: 100%;
  background-color: #d3d7d933;
  box-shadow: 0 0 16px 4px #24364080;
