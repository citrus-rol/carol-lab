  }

  .logo {
    display: flex;
    align-items: center;
    gap: 8px;
    text-decoration: none;
    color: inherit;
  }

  .logo-img {
    height: 80px;
    width: auto;
  }

  .menu {
    display: flex;
    gap: 20px;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .menu li a {
    color: #d3d7d980;
    text-decoration: none;
    font-size: clamp(1rem, 2vw, 2rem); 
