---
const base = import.meta.env.BASE_URL || '/';
const currentPath = Astro.url.pathname;
---

<nav id="navbar">
  <div class="nav-container">
    <a href={base} class="logo">
      <img src={`${import.meta.env.BASE_URL}navbar_logo.svg`} alt="Carol Lab" class="logo-img" />
    </a>

    <button class="menu-btn" aria-label="Toggle Menu">â˜°</button>

    <ul id="menu" class="menu">
      <li><a href={`${base}`} class={currentPath === `${base}` ? "active" : ""}>Lab Base</a></li>
      <li><a href={`${base}works`} class={currentPath.startsWith(`${base}works`) ? "active" : ""}>Creations</a></li>
      <li><a href={`${base}contact`} class={currentPath.startsWith(`${base}contact`) ? "active" : ""}>Connect</a></li>
    </ul>
  </div>
</nav>

<style>
  nav {
    position: fixed;
    top: 0;
    width: 100%;
    z-index: 1000;
    transition: background 0.3s, box-shadow 0.3s;
  }

  nav.scrolled {
    background: #505e6680;
    box-shadow: 0 2px 6px #243640;
  }

  .nav-container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 12px 24px;
  }

  .logo-img {
    height: 80px;
    width: auto;
  }

  .menu {
    display: flex;
    gap: 20px;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .menu li a {
    color: #d3d7d980;
    text-decoration: none;
    font-size: clamp(1rem, 2vw, 2rem);
    letter-spacing: 0.05rem;
  }
  .menu li a:hover { color: #e5af3a; }
  .menu li a.active { color: #d3d7d9; font-weight: bold; }
  .menu li a.active:hover { color: #e5af3a; }

  .menu-btn {
    display: none;
    font-size: 1.5rem;
    background: none;
    border: none;
    color: #d3d7d9;
    cursor: pointer;
  }
  .menu-btn:hover { color: #e5af3a; }

  @media (max-width: 768px) {
    .menu-btn { display: block; }

    .menu {
      display: none;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      gap: 24px;
      position: absolute;
      top: 100%;
      right: 20px;
      background: #24364080;
      box-shadow: 0 4px 12px 4px #24364080;
      padding: 24px 16px;
      border-radius: 12px;
    }
    .menu.active { display: flex; }
    .menu li a { font-size: 1rem; padding: 16px 0; }
  }
</style>

<script is:inline>
  document.addEventListener("DOMContentLoaded", () => {
    const btn = document.querySelector(".menu-btn");
    const menu = document.getElementById("menu");
    const navbar = document.getElementById("navbar");

    btn?.addEventListener("click", () => {
      menu?.classList.toggle("active");
      updateNavHeight();
    });

    window.addEventListener("scroll", () => {
      if (window.scrollY > 20) {
        navbar?.classList.add("scrolled");
      } else {
        navbar?.classList.remove("scrolled");
      }
    });

    const updateNavHeight = () => {
      if (navbar) {
        const h = navbar.offsetHeight;
        document.documentElement.style.setProperty("--navbar-height", h + "px");
        console.log("Navbar height:", h);
      }
    };

    updateNavHeight();
    window.addEventListener("resize", updateNavHeight);
  });
</script>
