---
const base = import.meta.env.BASE_URL || '/';
const currentPath = Astro.url.pathname; // 🔑 這裡定義目前路徑
---

<nav id="navbar">
  <div class="nav-container">
    <a href={base} class="logo">
      <!-- 直接用 public 的路徑 -->
      <img src={`${import.meta.env.BASE_URL}navbar_logo.svg`} alt="Carol Lab" class="logo-img" />
    </a>

    <button class="menu-btn" aria-label="Toggle Menu">
      ☰
    </button>

    <ul id="menu" class="menu">
      <li><a href={`${base}`} class={currentPath === `${base}` ? "active" : ""}>Lab Base</a></li>
      <li><a href={`${base}works`} class={currentPath.startsWith(`${base}works`) ? "active" : ""}>Creations</a></li>
      <li><a href={`${base}contact`} class={currentPath.startsWith(`${base}contact`) ? "active" : ""}>Connect</a></li>
    </ul>
  </div>
</nav>

<style>
  nav {
    position: fixed;
    top: 0;
    width: 100%;
    transition: background 0.3s, box-shadow 0.3s;
    z-index: 1000;
  }

  nav.scrolled {
    background: #505e6680;
    box-shadow: 0 2px 6px #243640;
  }

  .nav-container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 12px 24px;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 8px;
    text-decoration: none;
    color: inherit;
  }

  .logo-img {
    height: 80px;
    width: auto;
  }

  .menu {
    display: flex;
    gap: 20px;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .menu li a {
    color: #d3d7d980;
    text-decoration: none;
    font-size: clamp(1rem, 2vw, 2rem); 
    letter-spacing:0.05rem;
  }
  .menu li a:hover {    /* 滑過時變亮 */
    color: #e5af3a;           
  }
  .menu li a.active {
    color: #d3d7d9; 
    font-weight: bold;
  }
  .menu li a.active:hover {
    color: #e5af3a;  /* 例如當前頁 hover 時變金色 */
  }
  .menu-btn { /*漢堡☰*/
    display: none;
    font-size: 1.5rem;
    background: none;
    border: none;
    color: #d3d7d9;
    cursor: pointer;
  }
  .menu-btn:hover{
    color: #e5af3a; 
  }

  @media (max-width: 768px) {
    .menu-btn {
      display: block;
    }

    .menu {
      display: none;
      flex-direction: column;
      justify-content: center;  /* 垂直方向置中 */
      align-items: center;      /* 水平方向置中 */
      gap: 24px;
      position: absolute;
      top: 100%; /* 直接貼在 navbar 底下 */
      right: 20px;
      background: #24364080;
      box-shadow: 0 4px 12px 4px #24364080;
      padding: 24px 16px;
      border-radius: 12px;
    }

    .menu.active {
      display: flex;
    }

    .menu li a {
      font-size: 1rem; /* 調大字體 */
      letter-spacing:0.05rem;
      padding: 16px 0;    /* 增加間距，點擊範圍更大 */
    }
  }
</style>

<script is:inline>
  document.addEventListener("DOMContentLoaded", () => {
    const btn = document.querySelector(".menu-btn");
    const menu = document.getElementById("menu");
    const navbar = document.getElementById("navbar");

    // 📌 漢堡選單開關
    btn?.addEventListener("click", () => {
      menu?.classList.toggle("active");

      // 點擊後重新計算 navbar 高度
      updateNavHeight();
    });

    // 📌 捲動陰影效果
    window.addEventListener("scroll", () => {
      if (window.scrollY > 20) {
        navbar?.classList.add("scrolled");
      } else {
        navbar?.classList.remove("scrolled");
      }
    });

    // 📌 計算 navbar 高度，更新 BaseLayout 使用的變數
    const updateNavHeight = () => {
      if (navbar) {
        document.documentElement.style.setProperty(
          "--navbar-height",
          navbar.offsetHeight + "px"
        );
      }
    };

    // 初始化 + 視窗尺寸變化時重新計算
    updateNavHeight();
    window.addEventListener("resize", updateNavHeight);
  });
</script>

