---
// HomeNavbar.astro (Hero)
---
<div id="hero-container">
  <h1 id="main-title">Carol Lab — 創作實驗所</h1>
  <p id="typing-sub">A Place Where Ideas Take Shape and Flow.</p>
</div>

<script>
document.addEventListener('DOMContentLoaded', () => {
  const hero = document.getElementById('hero-container')!;
  const mainTitle = document.getElementById('main-title')!;
  const typingEl = document.getElementById('typing-sub')!;
  const text = typingEl.textContent || "";
  typingEl.textContent = "";
  let index = 0;

  function type() {
    if (index < text.length) {
      typingEl.textContent = text.slice(0, index + 1);
      index++;
      setTimeout(type, 80);
    }
  }
  type();

  window.addEventListener('scroll', () => {
    if (window.scrollY > 50) {
      hero.style.position = 'fixed';
      hero.style.top = '0';
      hero.style.width = '100%';
      hero.style.height = '60px';
      hero.style.backgroundColor = 'rgba(80, 94, 102, 0.6)';
      hero.style.padding = '5px 0';
      hero.style.backdropFilter = 'blur(6px)';
      hero.style.zIndex = '1000';

      mainTitle.style.fontSize = '1rem';
      typingEl.style.fontSize = '0.8rem';
      mainTitle.style.opacity = '0.8';
      typingEl.style.opacity = '0.8';
    } else {
      hero.style.position = 'relative';
      hero.style.top = '0';
      hero.style.width = '100%';
      hero.style.height = '100dvh';
      hero.style.backgroundColor = 'transparent';
      hero.style.padding = '0';
      hero.style.backdropFilter = 'none';

      mainTitle.style.fontSize = '2.2rem';
      typingEl.style.fontSize = '1.1rem';
      mainTitle.style.opacity = '1';
      typingEl.style.opacity = '1';
    }
  });
});
</script>

<style>
#hero-container {
  position: relative;
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  transition: all 0.5s ease;
  box-sizing: border-box; /* 避免 padding/margin 影響高度 */
}

#main-title {
  font-size: 2.2rem;
  font-weight: 700;
  color: #E5AF3A;
  margin: 0;
  transition: all 0.5s ease;
}

#typing-sub {
  font-size: 1.1rem;
  color: #bababa;
  margin: 0;
  transition: all 0.5s ease;
}

/* 響應式 */
@media (max-width: 1024px) {
  #main-title { font-size: 1.8rem; }
  #typing-sub { font-size: 0.8rem; }
}
@media (max-width: 480px) {
  #main-title { font-size: 1.4rem; }
  #typing-sub { font-size: 0.7rem; }
}
</style>
